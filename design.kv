#:kivy 1.0
<LoginScreen>: #rule
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label: 
                text: "User Login"
            TextInput:
                hint_text: "Username"
                id: username
            TextInput:
                hint_text: "Password"
                id: password
            Button:
                text: "Login"
                #root ref to cur rule
                #passes textinput to login() func of loginscreen class
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign up"
                on_press: root.sign_up() 

<SignUpScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Sign up to get quotes based on your mood!"
        TextInput:
            hint_text: "Username"
            id: username #var
        TextInput:
            hint_text: "Password"
            id: password
        Button:
            text: "Submit"
            #add user func called when button pressed
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text: "You have successfully signed-up"
        Button:
            text: "Back to log-in page"
            on_press: root.return_log_in()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.log_out()
        Label:
            text: "How are you feeling?"
        TextInput:
            hint_text: "Things to try: happy, sad, unlovedâ€¦"
        Button:
            text: "Enlighten me"
        Label:
            text: ""

<RootWidget>: #rule
    LoginScreen: 
        name: "Login_screen"
    SignUpScreen:
        name: "sign_up_screen" 
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"