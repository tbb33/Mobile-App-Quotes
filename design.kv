#:kivy 1.0
<LoginScreen>: #rule
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label: 
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign up"

<RootWidget>: #rule
    #shows loginScreen child of RootWidget
    LoginScreen: 
        name: "Login_screen"