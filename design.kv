#:kivy 1.0
<LoginScreen>: #rule
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label: 
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign up"
                on_press: root.sign_up() 

<SignUpScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Sign up to get quotes based on your mood!"
        TextInput:
            hint_text: "Username"
            id: username #var
        TextInput:
            hint_text: "Password"
            id: password
        Button:
            text: "Submit"
            #add user func called when button pressed
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        Label:
            text: "You have successfully signed-up"
        Button:
            text: "Back to log-in page"
            on_press: root.return_log_in()

<RootWidget>: #rule
    LoginScreen: 
        name: "Login_screen"
    SignUpScreen:
        name: "sign_up_screen" #screens must have name
    SignUpScreenSuccess:
        name: "sign_up_screen_success" 