#:kivy 1.0
<LoginScreen>: #rule
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label: 
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign up"
                on_press: root.sign_up() 

<SignUpScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Sign up to get quotes based on your mood!"
        TextInput:
            hint_text: "Username"
            id: username #var
        TextInput:
            hint_text: "Password"
            id: password
        Button:
            text: "Submit"
            #root access signupscreen class in py
            #executes sign_up func of that class by pass
            #ids username/password
            #access text of textinput
            on_press: root.sign_up(root.ids.username.text, root.ids.password.text)

<RootWidget>: #rule
    LoginScreen: 
        name: "Login_screen"
    SignUpScreen:
        name: "sign_up_screen" #screens must have name